<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title -TicTacToe</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/Custom.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>

    <header>
        @*This is the code for the GIF and makes it a button*@
        <a href="@Url.Action("Index", "Home")">
            <center>
                <div>
                    <img src='@Url.Content("~/Content/GIfFLip.gif")' />
                </div>
            </center>
        </a>
        @*This code makes the title 'TIC TAC TABLE FLIP' appear and also a home button*@
        <div class="content-wrapper">
            <center>
                <div> 
                    <p class="site-title"> @Html.ActionLink("TIC TAC TABLE FLIP", "Index", "Home")</p>
                </div>
            </center>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    @*Menu Buttons*@
                    <ul id="menu">
                        <li>@Html.ActionLink("HOME", "Index", "Home")</li>
                        <li>@Html.ActionLink("ABOUT US", "About", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>

    </header>

    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <center>
        <footer> &copy; 2015 All Rights Reserved </footer>
    </center>
</body>

</html>
